<% provide(:title, "Editor User") %>
<h1>Update your profile</h1>
<div class="mdl-grid edit-grid-style">
  <div class="mdl-cell--stretch">
  	<div class="face-grid-style">
	    <%= gravatar_for @user %>
	    <a href="http://gravatar.com/emails">change</a>
	  </div>
    <%= form_for(@user) do |f| %>
    	<%= render 'shared/error_messages' %>
			<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
	      <%= f.label :name, class: "mdl-textfield__label"%>
	      <%= f.text_field :name, class: "mdl-textfield__input" %>
	    </div>
	    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
	      <%= f.label :email, class: "mdl-textfield__label" %>
	      <%= f.text_field :email, class: "mdl-textfield__input" %>
			</div>
			<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
	      <%= f.label :password, class: "mdl-textfield__label" %>
	      <%= f.password_field :password, class: "mdl-textfield__input" %>
	    </div>
			<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
	      <%= f.label :password_confirmation, "Confirm Password", class: "mdl-textfield__label" %>
	      <%= f.password_field :password_confirmation, class: "mdl-textfield__input" %>
			</div>
			<div class="mdl-grid submit-grid-style">
      	<%= f.submit "Save changes", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" %>
      </div>
    <% end %>
  </div>
</div>