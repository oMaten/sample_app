<li>
  <span class="face"><%= gravatar_for User.find_by_id(micropost.user_id) %></span>
  <span class="name"><%= link_to User.find_by_id(micropost.user_id).name, User.find_by_id(micropost.user_id) %></span>
  <span class="content"><%= micropost.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
  </span>
  <% if current_user?(micropost.user) %>
  	<br>
    <span><%= link_to "delete", micropost, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: micropost.content %></span>
  <% end %>
</li>